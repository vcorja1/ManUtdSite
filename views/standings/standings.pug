extends ../layout
block content
	.main.container-fluid
		.row
			.col-sm-12.col-half-offset-left.col-half-offset-right.col-half
				h2.menu-title#premier-league
					a(href='/standings/premier-league') Premier League 2017/18
				h3.text-center.small-caps(style={'margin-bottom': '20px'}) Current Position:
					span(style={'color': 'red'}) #{'  2nd'}
				table.table.table-bordered
					thead
						tr
							th.text-center.hidden-xs
								abbr(title='Position') Pos
							th.text-center.hidden-sm.hidden-md.hidden-lg #
							th.text-center Team
							th.text-center.col-md-1.hidden-xs.hidden-sm Played
							th.text-center.hidden-md.hidden-lg
								abbr(title='Played') P
							th.text-center.col-md-1.hidden-xs
								abbr(title='Wins') W
							th.text-center.col-md-1.hidden-xs
								abbr(title='Draws') D
							th.text-center.col-md-1.hidden-xs
								abbr(title='Losses') L
							th.text-center.hidden-xs
								abbr(title='Goal Difference') GD
							th.text-center.hidden-xs Points
							th.text-center.hidden-sm.hidden-md.hidden-lg
								abbr(title='Points') Pts
					tbody
						each team in epl
							tr(style={'background-color': team.color})
								td.text-center=team.position
								td
									img(src=team.crestURI, height='20', width='20')
									| #{' ' + team.teamName}
								td.text-center=team.playedGames
								td.text-center.hidden-xs=team.wins
								td.text-center.hidden-xs=team.draws
								td.text-center.hidden-xs=team.losses
								td.text-center.hidden-xs=team.goalDifference
								td.text-center
									strong=team.points
			.col-sm-12.col-half-offset-left.col-half-offset-right.col-half
				h2.menu-title#champions-league
					a(href='/standings/champions-league') Champions League 2017/18
				h3.text-center.small-caps(style={'margin-bottom': '20px'}) Current Status:
					span(style={'color': 'red'}) #{'  Round of 16'}
				table.table.table-bordered
					thead
						tr
							th.text-center.hidden-xs
								abbr(title='Position') Pos
							th.text-center.hidden-sm.hidden-md.hidden-lg #
							th.text-center Team
							th.text-center.col-md-1.hidden-xs.hidden-sm Played
							th.text-center.hidden-md.hidden-lg
								abbr(title='Played') P
							th.text-center.col-md-1.hidden-xs
								abbr(title='Wins') W
							th.text-center.col-md-1.hidden-xs
								abbr(title='Draws') D
							th.text-center.col-md-1.hidden-xs
								abbr(title='Losses') L
							th.text-center.hidden-xs
								abbr(title='Goal Difference') GD
							th.text-center.hidden-xs Points
							th.text-center.hidden-sm.hidden-md.hidden-lg
								abbr(title='Points') Pts
					tbody
						each team in ucl.standing
							tr(style={'background-color': team.color})
								td.text-center=team.position
								td
									img(src=team.crestURI, height='20', width='20')
									| #{' ' + team.teamName}
								td.text-center=team.playedGames
								td.text-center.hidden-xs=team.wins
								td.text-center.hidden-xs=team.draws
								td.text-center.hidden-xs=team.losses
								td.text-center.hidden-xs=team.goalDifference
								td.text-center
									strong=team.points
