extends ../layout
block customcss
	link(rel='stylesheet', href='/css/standingsResults.css')
block content
	.main.container-fluid
		//- Include fixture mixin
		include ../../partials/fixtureMixin.pug
		.row
			//- Premier League Standings
			.col-sm-12.col-half-offset-left.col-half-offset-right.col-half
				h2.menu-title#u18-premier-league
					a(href='/standings/u18-premier-league-north') U18 Premier League North 2017/18
				h3.text-center.small-caps(style={'margin-bottom': '20px'}) Current Position:
					span(style={'color': 'red'}) #{'  ' + helpers.getTeamPosition(u18_pl.map(team => team.teamName))}
				table.table.table-bordered
					thead
						tr
							th.text-center.hidden-xs.hidden-ms
								abbr(title='Position') Pos
							th.text-center.hidden-sm.hidden-md.hidden-lg #
							th.text-center Team
							th.text-center.col-md-1.hidden-xs.hidden-ms.hidden-sm Played
							th.text-center.hidden-md.hidden-lg
								abbr(title='Played') P
							th.text-center.col-md-1.hidden-xs.hidden-ms
								abbr(title='Wins') W
							th.text-center.col-md-1.hidden-xs.hidden-ms
								abbr(title='Draws') D
							th.text-center.col-md-1.hidden-xs.hidden-ms
								abbr(title='Losses') L
							th.text-center.hidden-xs.hidden-ms
								abbr(title='Goal Difference') GD
							th.text-center.hidden-xs.hidden-ms Points
							th.text-center.hidden-sm.hidden-md.hidden-lg
								abbr(title='Points') Pts
					tbody
						each team in u18_pl
							tr(style={'background-color': team.color})
								td.text-center=team.position
								td
									img(src=team.crestURI, height='20', width='20')
									| #{' ' + helpers.getTeamLong(2, 13, team.teamName)}
								td.text-center=team.playedGames
								td.text-center.hidden-xs.hidden-ms=team.wins
								td.text-center.hidden-xs.hidden-ms=team.draws
								td.text-center.hidden-xs.hidden-ms=team.losses
								td.text-center.hidden-xs.hidden-ms=team.goalDifference
								td.text-center
									strong=team.points

			//- U18 Premier League Cup Standings
			.col-sm-12.col-half-offset-left.col-half-offset-right.col-half
				-const u18PLCupFixtures = fixtures.filter(match => match.competition == 14 && match.round > 3).reverse();
				.hidden-sm.hidden-md.hidden-lg
					.pad-space
				h2.menu-title#u18-pl-cup
					a(href='/standings/u18-premier-league-cup') U18 PREMIER LEAGUE CUP 2017/18
				h3.text-center.small-caps(style={'margin-bottom': '20px'}) Current Status:
					span(style={'color': 'red'}) #{'  OUT'}
				//- h4.blue.text-center.small-caps(style={'margin-bottom': '20px'}) Playoffs Results
				//- .panel.panel-default.align-items-center
				//- 	each match, index in u18PLCupFixtures
				//- 		+standingsMatchInfo(match, index)
				h4.blue.text-center.small-caps(style={'margin-bottom': '20px'}) Group Stage Standings
				table.table.table-bordered
					thead
						tr
							th.text-center.hidden-xs.hidden-ms
								abbr(title='Position') Pos
							th.text-center.hidden-sm.hidden-md.hidden-lg #
							th.text-center Team
							th.text-center.col-md-1.hidden-xs.hidden-ms.hidden-sm Played
							th.text-center.hidden-md.hidden-lg
								abbr(title='Played') P
							th.text-center.col-md-1.hidden-xs.hidden-ms
								abbr(title='Wins') W
							th.text-center.col-md-1.hidden-xs.hidden-ms
								abbr(title='Draws') D
							th.text-center.col-md-1.hidden-xs.hidden-ms
								abbr(title='Losses') L
							th.text-center.hidden-xs.hidden-ms
								abbr(title='Goal Difference') GD
							th.text-center.hidden-xs.hidden-ms Points
							th.text-center.hidden-sm.hidden-md.hidden-lg
								abbr(title='Points') Pts
					tbody
						each team in u18_pl_cup
							tr(style={'background-color': team.color})
								td.text-center=team.position
								td
									img(src=team.crestURI, height='20', width='20')
									| #{' ' + helpers.getTeamLong(2, 14, team.teamName)}
								td.text-center=team.playedGames
								td.text-center.hidden-xs.hidden-ms=team.wins
								td.text-center.hidden-xs.hidden-ms=team.draws
								td.text-center.hidden-xs.hidden-ms=team.losses
								td.text-center.hidden-xs.hidden-ms=team.goalDifference
								td.text-center
									strong=team.points

			//- FA Youth Cup
			.col-sm-12.col-half-offset-left.col-half-offset-right.col-half
				-const faYouthCupFixtures = fixtures.filter(match => match.competition == 15).reverse();
				.hidden-sm.hidden-md.hidden-lg
					.pad-space
				h2.menu-title#fa-cup
					a(href='/standings/fa-cup') FA YOUTH CUP 2017/18
				h3.text-center.small-caps(style={'margin-bottom': '20px'}) Current Status:
					span(style={'color': 'red'}) #{'  OUT'}
				.panel.panel-default.align-items-center
					each match, index in faYouthCupFixtures
						+standingsMatchInfo(match, index)
