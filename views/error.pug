extends layout
block customcss
	style(type="text/css").
		.text-center .image {
			height: 300px;
		}
		.large-height {
			height: 620px;
		}
		.small-height {
			height: 580px;
		}
		.equal-height {
			margin-top: 15px;
			height: 70px;
			line-height: 70px;
		}
		.equal-height > h3, .equal-height > h4 {
		    line-height: 1.2;
		    display: inline-block;
		    vertical-align: middle;
			margin: 0px;
		}
		.equal-height > h4 {
			padding-bottom: 10px;
		}
		@media (max-width: 479px) {
			h5 {
				font-size: 20px;
			}
			.text-center .image {
				height: 270px;
				width: 180px;
			}
		}
		@media (min-width: 717px) and (max-width: 767px) {
			h5 {
				font-size: 18px;
			}
		}
