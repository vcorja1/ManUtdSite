mixin getMatchDateWithCompetition(match, standingsView)
	if(standingsView)
		h5.bold.small-caps #{match.competitionName + ' - ' + match.roundName}
	if(match.status == 2)
		h5='TBD'
	if(match.status == 3 || match.status == 4)
		h5.bold.green='LIVE'
			if(match.result.gameMinute != null)
				span #{' (' + match.result.gameMinute + ')'}
	else
		h5=match.matchDate.dateTime
	if(!standingsView)
		h5.bold.small-caps #{match.competitionName + ' - ' + match.roundName}


mixin quickMatchInfoMobile(match, standingsView)
	if(standingsView)
		//- Match Date & Competition
		.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12.bg-light(style={'border-bottom': '1px solid #d3d3d3', 'margin-bottom': '10px'})
			+getMatchDateWithCompetition(match)
	.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12(style={'padding': '0', 'height': '109px'})
		.col-lg-8.col-md-8.col-sm-8.col-ms-8.col-xs-8.recent-match-mobile
			//- Home Team Name
			.container
				p
					img.full-height(src=match.homeTeam.clubLogoSrc, alt=`Club Logo of ${match.homeTeam.teamName}`)
				.hidden-xs
					h4.force-font-15(style={'padding-top': '5px'})=match.homeTeam.displayName
				.hidden-lg.hidden-md.hidden-sm.hidden-ms
					h4.force-font-15(style={'padding-top': '5px'})=match.homeTeam.displayNameShort
			//- Away Team Name
			.container
				p
					img.full-height(src=match.awayTeam.clubLogoSrc, alt=`Club Logo of ${match.awayTeam.teamName}`)
				.hidden-xs
					h4.force-font-15(style={'padding-top': '5px'})=match.awayTeam.displayName
				.hidden-lg.hidden-md.hidden-sm.hidden-ms
					h4.force-font-15(style={'padding-top': '5px'})=match.awayTeam.displayNameShort
		//- Match Status
		if (match.status == 2)
			//- Game postponed -> (shouldn't usually be the case though)
			.col-lg-4.col-md-4.col-sm-4.col-ms-4.col-xs-4.match-status-mobile(style={'align-items': 'center'})
				h5.bold.postponed-match='POSTPONED'
		else if (match.status == 3 || match.status == 4)
			//- Game is currently in play
			.col-lg-4.col-md-4.col-sm-4.col-ms-4.col-xs-4.match-status-mobile
				.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12
					h4.bold.blue-upcoming-match=match.result.homeGoals
						if(match.note != null)
							span=` (${match.note.split("-")[0]})`
				.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12
					h4.bold.blue-upcoming-match=match.result.awayGoals
						if(match.note != null)
							span=` (${match.note.split("-")[1]})`
		else if (match.status == 5)
			//- Game completed
			.col-lg-4.col-md-4.col-sm-4.col-ms-4.col-xs-4.match-status-mobile
				.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12(style={'padding': '5px 0px 0px 0px'})
					h4.bold(style={ 'color': match.result.resultColor })=match.result.homeGoals
						if(match.note != null)
							span=` (${match.note.split("-")[0]})`
				.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12(style={'padding': '5px 0px 0px 0px'})
					h4.bold(style={ 'color': match.result.resultColor })=match.result.awayGoals
						if(match.note != null)
							span=` (${match.note.split("-")[1]})`
		else
			//- Game either scheduled or in play
			.col-lg-4.col-md-4.col-sm-4.col-ms-4.col-xs-4.match-status-mobile(style={'align-items': 'center', 'justify-content': 'center'})
				h4.bold.blue-upcoming-match=match.matchDate.matchTime
	if(!standingsView)
		//- Match Date & Competition
		.col-lg-12.col-md-12.col-sm-12.col-ms-12.col-xs-12.bg-light(style={'border-top': '1px solid #d3d3d3'})
			+getMatchDateWithCompetition(match)


mixin quickMatchInfo(match, heading)
	.panel.panel-success.align-items-center
		.panel-heading
			h3.bold #{heading}
		.panel-body
			//- Mobile View
			.hidden-lg.hidden-md.hidden-sm.col-ms-12.col-xs-12(style={'padding': '0'})
				+quickMatchInfoMobile(match, false)
			//- Large View
			.col-lg-12.col-md-12.col-sm-12.hidden-ms.hidden-xs(style={'height': '86px'})
				//- Home Team
				.col-lg-4.col-md-4.col-sm-4.recent-match
					.container(style={'height': '86px'})
						p
							img.full-height(src=match.homeTeam.clubLogoSrc, alt=`Club Logo of ${match.homeTeam.teamName}`)
						h4(style={'padding-left': '15px'})=match.homeTeam.displayName
				//- Match Status
				.col-lg-4.col-md-4.col-sm-4
					if (match.status == 2)
						//- Game postponed -> (shouldn't usually be the case though)
						h3.bold.postponed-match='POSTPONED'
					else if (match.status == 3 || match.status == 4)
						//- Game is currently in play
						h3.bold.blue-upcoming-match
							| #{match.result.homeGoals + ' - ' + match.result.awayGoals}
					else if (match.status == 5)
						//- Game completed
						h3.bold(style={ 'color': match.result.resultColor })=match.result.resultString
					else
						//- Game either scheduled or in play
						h3.bold.blue-upcoming-match=match.matchDate.matchTime
					//- Match data & Competition
					+getMatchDateWithCompetition(match)
				//- Away Team
				.col-lg-4.col-md-4.col-sm-4.recent-match
					.container(style={'height': '86px'})
						h4(style={'padding-right': '15px'})=match.awayTeam.displayName
						p
							img.full-height(src=match.awayTeam.clubLogoSrc, alt=`Club Logo of ${match.awayTeam.teamName}`)
		if (match.note != null)
			.bg-light.match-penalty-result
				h5(style={ 'color': match.result.resultColor })=match.result.penaltyMessage


mixin fixtures(matchList)
	.panel.panel-info.align-items-center.fixtures-container
		.panel-heading
			.hidden-xs.hidden-ms.hidden-sm.col-md-1.col-lg-1
				h4 VENUE
			.col-xs-12.col-sm-9.col-md-8.col-lg-8
				h4 RESULT
			.hidden-xs.hidden-ms.hidden-sm.col-md-1.col-lg-1
				h4 ROUND
			.hidden-xs.hidden-ms.col-sm-3.col-md-2.col-lg-2
				h4 COMPETITION
		each match in matchList
			.panel-body(style={'border-bottom': '2px solid #d3d3d3'})
				//- Mobile View
				.hidden-lg.hidden-md.hidden-sm.col-ms-12.col-xs-12(style={'padding': '0'})
					+quickMatchInfoMobile(match, false)
				//- Large View
				.col-lg-12.col-md-12.col-sm-12.hidden-ms.hidden-xs.fixtures-large-view
					//- Match Stadium
					.col-lg-1.col-md-1.hidden-sm
						h5=match.stadium
						h4
							if (match.neutral)
								abbr(title='Neutral')='(N)'
							else if (match.hometeam == 'Manchester United FC')
								abbr(title='Home')='(H)'
							else
								abbr(title='Away')='(A)'
					//- Teams and Match Status
					.col-lg-8.col-md-8.col-sm-9
						//- Home Team
						.col-lg-4.col-md-4.col-sm-4.main-score-status
							p
								img.full-height(src=match.homeTeam.clubLogoSrc, alt=`Club Logo of ${match.homeTeam.teamName}`)
							h4(style={'padding-left': '15px'})=match.homeTeam.displayName
						//- Match Status
						.col-lg-4.col-md-4.col-sm-4(style={'padding-top': '10px'})
							if (match.status == 2)
								//- Game postponed
								h4.bold.postponed-match POSTPONED
								h5 TBD
							else if (match.status == 3 || match.status === 4)
								//- Game is currently in play
								h3.bold.blue-upcoming-match
									| #{match.result.homeGoals + ' - ' + match.result.awayGoals}
								h5.bold.green LIVE
							else if (match.status == 5)
								//- Game Completed
								h3.bold(style={'color': match.result.resultColor})=match.result.resultString
								h5=match.matchDate.dateTime
							else
								//- Game Not Yet Played
								h3.bold.blue-upcoming-match=match.matchDate.matchTime
								h5=match.matchDate.dateTime
							.hidden-sm.hidden-md.hidden-lg
								h5.small-caps.bold=match.competitionName
						//- Away Team
						.col-lg-4.col-md-4.col-sm-4.main-score-status
							h4(style={'padding-right': '15px'})=match.awayTeam.displayName
							p
								img.full-height(src=match.awayTeam.clubLogoSrc, alt=`Club Logo of ${match.awayTeam.teamName}`)
					//- Competition & Logo
					if (match.competition === 9)
						.col-lg-3.col-md-3.col-sm-3
							h5.small-caps='FRIENDLY'
					else
						.col-lg-1.col-md-1.hidden-sm
							h5.small-caps=match.roundName
						.col-lg-2.col-md-2.col-sm-3.image-container
							img.image.image-responsive(src=match.competitionLogoSrc, alt=`${match.competitionName} Competition Logo`)
			//- If the game went to penalties
			if (match.note != null)
				.bg-light.match-penalty-result
					h5(style={ 'color': match.result.resultColor })=match.result.penaltyMessage
